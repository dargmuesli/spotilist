<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="600.0" prefWidth="1000.0" stylesheets="/de/dargmuesli/dargmusic/css/styles.css"
      xmlns="http://javafx.com/javafx"
      fx:controller="de.dargmuesli.dargmusic.ui.controllers.DashboardController">
    <children>
        <MenuBar styleClass="bold">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuFileSettingsAction" text="Settings"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <content>
                        <Accordion fx:id="accPlaylistMappings"/>
                    </content>
                </ScrollPane>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addPlaylistMapping"
                        text="New"/>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </VBox>
    </children>
</VBox>
