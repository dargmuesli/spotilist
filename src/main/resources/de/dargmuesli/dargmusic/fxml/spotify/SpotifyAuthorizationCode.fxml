<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="10.0" stylesheets="@../../css/styles.css"
      xmlns="http://javafx.com/javafx/8.0.202-ea"
      fx:controller="de.dargmuesli.dargmusic.ui.controllers.spotify.SpotifyAuthorizationCodeController">
    <HBox alignment="CENTER" spacing="5.0">
        <children>
            <Label text="Authorization Code"/>
            <TextField fx:id="spotifyAuthorizationCodeTextField"/>
        </children>
    </HBox>
    <Button fx:id="btnSave" disable="true" mnemonicParsing="false" onAction="#save" text="Save"/>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
